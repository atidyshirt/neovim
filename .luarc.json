{
    "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
    "runtime": {
        "version": "LuaJIT"
    },
    "workspace": {
        "library": [
            "./lua",
            "runtime/lua",
            "${3rd}/busted/library"
        ],
        "ignoreDir": [ "**/spec/**/*.lua" ],
        "checkThirdParty": "Disable"
    },
    "diagnostics": {
        "groupFileStatus": {
            "strict": "Opened",
            "strong": "Opened"
        },
        "groupSeverity": {
            "strong": "Warning",
            "strict": "Warning"
        },
        "unusedLocalExclude": [ "_*" ],
        "disable": [
            "luadoc-miss-see-name",
            "no-unknown"
        ]
    }
}
